@model Emart.ViewModels.SocialViewModel

<body>

    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a class="active" href="/account/index">Home</a></li>
                    <li><a href="/account/member">Members</a></li>
                    <li><a href="/account/group">Groups</a></li>
                    <li><a href="/account/photos">Photos</a></li>
                    <li><a class="active" href="/account/profile">Profile</a></li>
                    @*<li><img src="/Account/ImageRetrive/?imgID=@Model.E_users.imgid" style="width:100px;height:50px;float:right" class="logo" alt="" /></li>*@
                </ul>
                <ul class="nav navbar-nav"></ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </nav>


    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="profile">
                        <h1 class="page-header">@Model.E_users.Username</h1>
                        <div class="row">
                            <div class="col-md-4">
                                <div id="imgPreview" class="thumbnail">
                                    @if (Model.E_users.imgid != 0)
                                    {
                                        <div>

                                            <img id="profileimg" src="/Account/ImageRetrive?imgID=@Model.E_users.imgid" class="img-responsive thumbnail" />
                                        </div>

                                    }




                                    else
                                    {



                                    <img id="targetimg" src="~/Content/Users/img/user.png" class="img-thumbnail">
                                    }

                                </div>




                                
                            </div>
                            <div class="col-md-8">
                                <ul>
                                    <li><strong>Name: </strong>@Model.E_users.FirstName</li>
                                    <li><strong>Email Address: </strong>@Model.E_users.Email</li>
                                    <li><strong>Firstname: </strong>@Model.E_users.FirstName</li>
                                    <li><strong>LastName: </strong>@Model.E_users.LastName</li>
                                    <li><strong>City: </strong>@Model.E_users.City</li>
                                    <li><strong>State: </strong>@Model.E_users.State</li>
                                    <li><strong>Address: </strong>@Model.E_users.Address</li>
                                    <li><strong>Gender: </strong>@Model.E_users.Gender</li>
                                    <li><strong>Profession: </strong>@Model.E_users.Profession</li>
                                    @*<li><strong>Contact No: </strong>@Model.E_users.PhoneNumber</li>*@
                                </ul>
                            </div>

                        </div>

                        <br><br>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Profile Wall</h3>
                                    </div>
                                    <div class="panel-body">
                                        <form>
                                            <div class="form-group">
                                                <textarea class="form-control" placeholder="Write on the wall"></textarea>
                                            </div>
                                            <button type="submit" class="btn btn-default">Submit</button>
                                            <div class="pull-right">
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-default"><i class="fa fa-pencil"></i> Text</button>
                                                    <button type="button" class="btn btn-default"><i class="fa fa-file-image-o"></i> Image</button>
                                                    <button type="button" class="btn btn-default"><i class="fa fa-file-video-o"></i> Video</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-md-4">
                    @*<a href="/Account/Recommend" class=" btn btn-default">Recommend</a>*@




                </div>
            </div>
        </div>
    </section>

    <footer>
        <div class="container">
            <p>Dobble Copyright &copy; 2015, All Rights Reserved</p>
        </div>
    </footer>


</body>